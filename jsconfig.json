{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./frontend/src/*"],
      "vue": ["node_modules/vue/dist/vue.global.js"]
    }
  },
  "include": [
    "frontend/src/**/*",
    "frontend/*.html"
  ],
  "exclude": [
    "node_modules",
    "backend"
  ],
  "vueCompilerOptions": {
    "globalTypesPath": "./node_modules/vue/dist/vue.d.ts"
  }
}
